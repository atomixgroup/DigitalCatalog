<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/item_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/circle_drawable_red" />

    <ir.codetower.samanshiri.CustomViews.CustomTextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_image"
        android:layout_toLeftOf="@+id/item_image"
        android:layout_toStartOf="@+id/item_image"
        app:fontName="yekan"
        android:textSize="20sp"
        android:textColor="#666"
        tools:text="محصولات ما" />

    <ir.codetower.samanshiri.CustomViews.CustomTextView
        android:id="@+id/item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_image"
        android:layout_toLeftOf="@+id/item_image"
        android:layout_toStartOf="@+id/item_image"
        app:fontName="yekan"
        android:textColor="#666"
        tools:text="پرداختی" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/item_inc"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/item_dec"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/item_count"
        android:layout_toRightOf="@+id/item_count"
        app:srcCompat="@drawable/inc" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/item_dec"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/item_image"
        android:layout_alignLeft="@+id/linearLayout9"
        android:layout_alignStart="@+id/linearLayout9"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        app:srcCompat="@drawable/dec" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/item_count"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/item_inc"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/item_dec"
        android:layout_toRightOf="@+id/item_dec"
        android:gravity="center"
        android:inputType="number"
        android:textColor="#666"
        android:textSize="20sp" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="32dp"
        android:id="@+id/item_delete"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_delete" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#e2e2e2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/item_image"
        android:layout_height="2dp"
        android:id="@+id/linearLayout9">

    </LinearLayout>


</RelativeLayout>