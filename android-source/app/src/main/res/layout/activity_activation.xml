<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="ir.codetower.samanshiri.Activities.ActivationActivity">
    <android.support.v7.widget.AppCompatImageView
        android:layout_width="200dp"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/ic_active_logo" />
    <EditText
        android:maxLength="4"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="#999"
        android:inputType="number"
        android:layout_height="48dp"
        android:id="@+id/code"
        android:layout_marginTop="10dp" />


    <ir.codetower.samanshiri.CustomViews.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fontName="yekan"
        android:text="کد 4 رقمی ارسال شده از طریق پیام کوتاه به گوشی شما را وارد کنید"
        android:gravity="center"
        android:textSize="20sp"
        android:lineSpacingMultiplier="1.5"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/code"

        android:layout_centerHorizontal="true" />
    <ProgressBar
        android:id="@+id/progress"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
</LinearLayout>
