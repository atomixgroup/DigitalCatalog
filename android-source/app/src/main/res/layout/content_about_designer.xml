<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >

            <ImageView
                android:id="@+id/primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/placeholder" />

            <ir.codetower.samanshiri.CustomViews.CustomTextView
                android:text="شرکت  نسل جوان و اندیشمند نجوا "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:background="@drawable/border"
                android:padding="10dp"
                android:textSize="20sp"
                app:fontName="yekan" />
            <ir.codetower.samanshiri.CustomViews.CustomTextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/border"
                android:padding="10dp"
                app:fontName="yekan" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ir.codetower.samanshiri.CustomViews.CustomButton
            android:id="@+id/telegram"
            android:layout_width="0dp"
            app:btnFontName="yekan"
            android:text="Telegram"
            android:backgroundTint="#1cbef0"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ir.codetower.samanshiri.CustomViews.CustomButton
            android:id="@+id/call"
            app:btnFontName="yekan"
            android:layout_width="0dp"
            android:text="Call"
            android:backgroundTint="#30f01c"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>