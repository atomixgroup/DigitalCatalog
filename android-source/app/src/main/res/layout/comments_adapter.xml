<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ir.codetower.samanshiri.CustomViews.CustomTextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@+id/linearLayout9"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/linearLayout9"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:textColor="#666"
        android:textSize="14sp"
        app:fontName="yekan"
        tools:text="محصولات ما" />

    <ir.codetower.samanshiri.CustomViews.CustomTextView
        android:id="@+id/item_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignEnd="@+id/item_title"
        android:layout_below="@+id/item_title"
        android:layout_alignRight="@+id/item_title"
        android:textColor="#666"
        android:textSize="10sp"
        app:fontName="yekan"
        tools:text="پرداختی" />



    <android.support.v7.widget.AppCompatImageView
        android:layout_width="32dp"
        android:id="@+id/item_delete"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_delete" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#e2e2e2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="2dp"
        android:layout_below="@+id/item_owner"
        android:id="@+id/linearLayout9">

    </LinearLayout>


</RelativeLayout>